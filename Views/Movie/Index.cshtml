@model FilmsCatalog.Models.Movie


        <div class="container d-lg-flex p-2 m-2">
            <div class="col-lg-4 col-sm-12 mb-2">
                <img src="@("~/images/" + Model.Poster)" asp-append-version="true" class="img-thumbnail" />
            </div>
            <div class="col-lg-8 col-sm-12">
                <label asp-for="@Model.Name" class="font-weight-bold"></label>
                <p>@Model.Name</p>

                <br />
                <label asp-for="@Model.Description" class="font-weight-bold"></label>
                <p>@Model.Description</p>

                <br />
                <label asp-for="@Model.Year_of_release" class="font-weight-bold"></label>
                <p>@Model.Year_of_release.ToShortDateString()</p>

                <br />
                <label asp-for="@Model.Producer" class="font-weight-bold"></label>
                <p>@Model.Producer</p>

                @if (ViewBag.IsEmail)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id"  class="btn btn-primary">Изменить</a>
                }
            </div>
        </div>
